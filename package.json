{
  "version": "0.0.4",
  "scripts": {
    "prepare": "lefthook install",
    "start": "plop",
    "test": "vitest",
    "test:run": "vitest run",
    "format": "prettier --write .",
    "lint": "eslint .",
    "build:index": "esbuild src/executable.ts --bundle --platform=node --format=esm --outfile=bin/index.js --packages=external",
    "build:plopfile": "esbuild src/plopfile.ts --bundle --platform=node --format=esm --outfile=bin/plopfile.js --packages=external",
    "build": "concurrently pnpm:build:*"
  },
  "volta": {
    "node": "18.14.2",
    "pnpm": "7.29.0",
    "lefthook": "1.3.4",
    "commitizen": "4.3.0"
  },
  "bin": {
    "suipta": "bin/index.js"
  },
  "main": "src/index.ts",
  "type": "module",
  "name": "suipta",
  "description": "Simple boilerplate-code cli generator for Feature-Sliced Design methodolgy",
  "license": "ISC",
  "keywords": [
    "fsd",
    "boilerplate-code generator",
    "cli",
    "codegen"
  ],
  "devDependencies": {
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "lefthook": "^1.3.4",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "@digitak/esrun": "^3.2.21",
    "cmd-ts": "^0.12.1",
    "esbuild": "^0.17.12",
    "minimist": "^1.2.8",
    "node-plop": "^0.31.1",
    "plop": "^3.1.2",
    "yaml": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
